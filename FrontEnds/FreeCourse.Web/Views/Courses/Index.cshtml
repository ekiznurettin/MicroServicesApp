@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                @if (Model!=null)
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs Adı</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }else{
                    <div class="alert alert-info">
                        Kurs Bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <a asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action">Kurslarım</a>
   
    </div>
</div>