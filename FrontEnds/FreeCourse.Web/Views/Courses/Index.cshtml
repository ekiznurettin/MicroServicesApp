@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary">Kurs Ekle</a>
                @if (Model!=null)
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs Adı</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>Kategori</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.StockPictureUrl" class="img-thumbnail" style="width:72px;"/> </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle </a>
                                        <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }else{
                    <div class="alert alert-info">
                        Kurs Bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <a asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action">Kurslarım</a>
   
    </div>
</div>